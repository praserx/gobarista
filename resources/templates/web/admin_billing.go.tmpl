<!doctype html>
<html lang="en">

<head>
  {{template "partials/meta"}}
  <title>{{.title}}</title>
</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    {{template "partials/sidebar"}}
    <!--  Main wrapper -->
    <div class="body-wrapper">
      {{template "partials/header"}}
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
              <div class="card-body p-4">
                <h5 class="card-title fw-semibold mb-4">Billing periods</h5>
                <div class="table-responsive">
                  <table class="table text-nowrap mb-0 align-middle">
                    <thead class="text-dark fs-4">
                      <tr>
                        <th class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">ID</h6>
                        </th>
                        <th class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">Period</h6>
                        </th>
                        <th class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">Issued</h6>
                        </th>
                        <th class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">Unit Price</h6>
                        </th>
                        <th class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">Total quantity</h6>
                        </th>
                        <th class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">Total amount</h6>
                        </th>
                        <th class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">Cash</h6>
                        </th>
                        <th class="border-bottom-0">
                          <h6 class="fw-semibold mb-0">Status</h6>
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                      {{range .periods}}
                      <tr>
                        <td class="border-bottom-0"><h6 class="fw-semibold mb-0">{{ .ID }}</h6></td>
                        <td class="border-bottom-0">
                            <h6 class="fw-normal mb-1">{{ .DateFrom | formatAsDate }}<br>{{ .DateTo | formatAsDate }}</h6>
                        </td>
                        <td class="border-bottom-0">
                          <p class="mb-0 fw-normal">{{ .DateOfIssue | formatAsDate }}</p>
                        </td>
                        <td class="border-bottom-0">
                          <div class="d-flex align-items-center gap-2">
                            <p class="mb-0 fw-normal">{{ .UnitPrice | formatAsMoney }}</p>
                          </div>
                        </td>
                        <td class="border-bottom-0">
                          <div class="d-flex align-items-center gap-2">
                            <p class="mb-0 fw-normal">{{ .TotalQuantity }}</p>
                          </div>
                        </td>
                        <td class="border-bottom-0">
                          <div class="d-flex align-items-center gap-2">
                            <p class="mb-0 fw-normal">{{ .TotalAmount }}</p>
                          </div>
                        </td>
                        <td class="border-bottom-0">
                          <div class="d-flex align-items-center gap-2">
                            <p class="mb-0 fw-normal">{{ .Cash }}</p>
                          </div>
                        </td>
                        <td class="border-bottom-0">
                          <div class="d-flex align-items-center gap-2">
                            {{if .Closed}}
                            <span class="badge bg-secondary rounded-3 fw-semibold">Finished</span>
                            {{else}}
                            <span class="badge bg-success rounded-3 fw-semibold">In progress</span>
                            {{end}}
                          </div>
                        </td>
                      </tr> 
                      {{end}}               
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="py-6 px-6 text-center">
          <p class="mb-0 fs-4">Design and Developed by <a href="https://adminmart.com/" target="_blank" class="pe-1 text-primary text-decoration-underline">AdminMart.com</a> Distributed by <a href="https://themewagon.com">ThemeWagon</a></p>
        </div>
      </div>
    </div>
  </div>
  {{template "partials/scripts"}}
</body>

</html>